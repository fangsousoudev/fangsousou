{
    "swagger": "2.0",
    "info": {
        "title": "BangBang Share API",
        "description": "The API of BangBang Share.",
        "version": "1.0.0"
    },
    "host": "m.bestbangbang.com",
    "schemes": [
        "https"
    ],
    "basePath": "/v1",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/register": {
            "post": {
                "summary": "注册",
                "description": "创建新的用户",
                "tags": [
                    "Auth"
                ],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "用户个人信息",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/User"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "返回token",
                        "schema": {
                            "$ref": "#/definitions/Token"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "登陆",
                "description": "登陆验证用户身份",
                "tags": [
                    "Auth"
                ],
                "parameters": [{
                    "in": "body",
                    "name": "body",
                    "description": "登陆的个人信息",
                    "required": true,
                    "schema": {
                        "$ref": "#/definitions/LoginUser"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "返回token",
                        "schema": {
                            "$ref": "#/definitions/Token"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "phonenumber":{
                    "type": "string",
                    "description": "手机号码"
                },
                "name":{
                    "type": "string",
                    "description": "姓名"
                },
                "password":{
                    "type": "string",
                    "description": "mi ma"
                }
            }
        },
        "LoginUser": {
            "type": "object",
            "properties": {
                "phonenumber":{
                    "type": "string",
                    "description": "手机号码"
                },
                "password":{
                    "type": "string",
                    "description": "mi ma"
                }
            }
        },
        "Token": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string",
                    "description": "返回Token"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        }
    }
}
